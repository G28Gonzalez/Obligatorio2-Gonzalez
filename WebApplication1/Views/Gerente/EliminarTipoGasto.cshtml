@using Dominio

@{
    ViewData["Title"] = "Eliminar tipo de gasto";
    List<TipoGasto> gastos = (List<TipoGasto>)ViewBag.Gastos;
}

<h1>Eliminar tipo de gasto</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">@ViewBag.Mensaje</div>
}

<form asp-controller="Gerente" asp-action="EliminarTipoGasto" method="post">
    <div class="mb-3">
        <label class="form-label">Seleccione el tipo de gasto a eliminar</label>
        <select class="form-select" name="nombreGasto" required>
            <option value="">-- Seleccione --</option>

            @foreach (TipoGasto g in gastos)
            {
                <option value="@g.Nombre">@g.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-danger">Eliminar</button>
</form>
