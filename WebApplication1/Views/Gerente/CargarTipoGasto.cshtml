@{
    ViewData["Title"] = "Cargar Tipo Gasto";
}

<h1>Cargar nuevo tipo de gasto</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">@ViewBag.Mensaje</div>
}

<form asp-controller="Gerente" asp-action="CargarPago" method="post">
    <div class="mb-3">
        <label class="form-label">Nombre del gasto</label>
        <input type="text" name="nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <textarea name="descripcion" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
